<Window x:Class="OutsideConnectionsSchema.UI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="СВП" Height="150" Width="300">
    <Grid Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>
        <Button Name="DoButton" Content="Сделать" HorizontalAlignment="Center" VerticalAlignment="Center"  Width="75" Height="25" Click="DoButton_Click" Grid.Row="1"/>
        <GroupBox Header="Проект:" SnapsToDevicePixels="True">
            <RichTextBox Name="richTextBox" HorizontalAlignment="Center" VerticalAlignment="Center" BorderThickness="0" IsHitTestVisible="False">
                <FlowDocument>
                    <Paragraph FontSize="14" TextAlignment="Center"/>
                </FlowDocument>
            </RichTextBox>
        </GroupBox>
    </Grid>
</Window>
